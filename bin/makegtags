#!/bin/bash

while [ ! -d .git ]; do
    if [ $PWD == / ]; then
	echo 'Ascended to root but no .git dir (ie, project root) found.'
	exit 1
    fi
    cd ..
done

echo Tagging: $PWD
files=$(gtags --verbose 2>&1 | grep extracting | wc -l) && echo scanned $files

